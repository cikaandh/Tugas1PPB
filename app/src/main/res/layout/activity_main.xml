<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.tugas1.xirpl4010.tugas01PPB.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.01"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="451dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="LORENTZ RENTAL OUTDOOR"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHighlight="#ffffff"
            android:textIsSelectable="false"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.01"
            android:text="PENYEWAAN BARANG "
            android:textAlignment="center"
            android:textColor="#008cff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Nama Penyewa :" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Nomor Telepon :" />

        <EditText
            android:id="@+id/editTextTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Akan melakukan pendakian ke :" />

        <Spinner

            android:id="@+id/spinnerGunung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Waktu Penyewaan :" />

        <EditText
            android:id="@+id/editTextSewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Waktu Pengembalian :" />

        <EditText
            android:id="@+id/editTextKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Barang yang akan disewa :" />

        <CheckBox
            android:id="@+id/checkBoxTenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:checked="false"
            android:text="Tenda " />

        <RadioGroup
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">

            <RadioButton
                android:id="@+id/radioButtonSL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Tenda Single Layer " />

            <RadioButton
                android:id="@+id/radioButtonDL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Tenda Double Layer " />


        </RadioGroup>

        <EditText
            android:id="@+id/editTextTenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <CheckBox
            android:id="@+id/checkBoxSB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:checked="false"
            android:text="Sleeping Bag " />

        <EditText
            android:id="@+id/editTextSB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <CheckBox
            android:id="@+id/checkBoxKmpr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:checked="false"
            android:text="Kompor" />

        <EditText
            android:id="@+id/editTextKmpr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <CheckBox
            android:id="@+id/checkBoxTas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:checked="false"
            android:text="Tas Carrier Kapasitas 60 - 75 ltr" />

        <EditText
            android:id="@+id/editTextTas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <CheckBox
            android:id="@+id/checkBoxHL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:checked="false"
            android:text="Headlamp" />

        <EditText
            android:id="@+id/editTextHL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01" />

        <Button
            android:id="@+id/buttonSewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.01"
            android:text="Sewa" />

    </LinearLayout>
</ScrollView>